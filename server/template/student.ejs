<!DOCTYPE html>
<html>
  <head>
    <style>
      @page {
        margin: 1in;
      }
      .page-break {
        page-break-after: always;
      }
      .class-heading {
        font-size: 18px;
        font-weight: bold;
        margin-bottom: 10px;
      }
      .student {
        margin-bottom: 15px;
      }
    </style>
  </head>
  <body>
    <% for (const [className, students] of Object.entries(groupedByClass)) { %>
      <div>
        <div class="class-heading">Class: <%= className %></div>
        <% students.forEach((student) => { %>
          <div class="student">
            <p>Name: <%= student.name %></p>
            <p>Section: <%= student.section || "N/A" %></p>
            <img src="<%= student.avatarUrl %>" alt="Avatar" width="100" height="100" />
          </div>
        <% }); %>
      </div>
      <div class="page-break"></div>
    <% } %>
  </body>
</html>
