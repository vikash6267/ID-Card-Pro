<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Student Details</title>
  <style>
    @page {
      size: A4;
      margin: 40px;
    }

    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 20px;
      background-color: #f4f4f4;
    }

    .class-heading {
      text-align: center;
      margin-top: 20px;
      font-size: 24px;
      color: #333;
      page-break-before: always;
    }

    .student-grid {
      display: flex;
      flex-wrap: wrap;
      gap: 10px;
      padding: 10px;
    }

    .student-card {
      background-color: white;
      border-radius: 8px;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      overflow: hidden;
      text-align: center;
      padding: 8px;
      width: calc(33.33% - 10px);
      box-sizing: border-box;
      page-break-inside: avoid;
      break-inside: avoid;
    }

    .student-image img {
      width: 55%;
      height: 100px;
      object-fit: cover;
      border-radius: 50%;
    }

    .student-details h3 {
      font-size: 15px;
      color: #333;
      margin: 5px 0;
    }

    .student-details p {
      font-size: 14px;
      color: #666;
      margin: 5px 0;
    }

    .extra-fields ul {
      text-align: center;
      list-style-type: none;
      padding: 0;
      margin: 0;
    }

    .extra-fields li {
      font-size: 12px;
      color: #777;
      margin: 3px 0;
    }

    .page-break {
      page-break-after: always;
      clear: both;
    }

    /* Responsiveness */
    @media (max-width: 768px) {
      .student-card {
        width: calc(50% - 10px);
      }
    }

    @media (max-width: 480px) {
      .student-card {
        width: 100%;
      }

      .student-details h3 {
        font-size: 12px;
      }

      .student-details p,
      .extra-fields li {
        font-size: 8px;
        margin: 2px 0;
      }
    }

    @media print {
      body {
        background-color: white;
      }

      .student-card {
        box-shadow: none;
        border: 1px solid #ddd;
      }
    }
  </style>
</head>

<body>
  <% Object.entries(groupedByClass).forEach(([className, students]) => { %>
    <h1 class="class-heading"><%= heading %></h1>

    <div class="student-grid">
      <% students.forEach((student, index) => { %>
        <div class="student-card">
          <div class="student-image">
            <img src="<%= student.avatarUrl %>" alt="Student Image">
          </div>
          <div class="student-details">
            <h3><%= student.name %></h3>
            <div class="extra-fields">
              <ul>
                <% Object.entries(student.extraFields).forEach(([key, value]) => { %>
                  <li><strong><%= key %>:</strong> <%= value %></li>
                <% }) %>
              </ul>
            </div>
          </div>
        </div>

        <% if ((index + 1) % 9 === 0 || index === students.length - 1) { %>
          <div class="page-break"></div>
        <% } %>
      <% }) %>
    </div>

  <% }) %>
</body>

</html>

