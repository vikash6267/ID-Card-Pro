<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Student Details</title>
  <style>
    @page {
      size: A4;
      margin: 20mm;
    }

    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      background-color: #f4f4f4;
    }

    .class-heading {
      text-align: center;
      margin: 20px 0;
      font-size: 24px;
      color: #333;
      page-break-before: always;
    }

    .student-grid {
      display: flex;
      flex-wrap: wrap;
      gap: 15px;
      justify-content: center;
    }

    .student-card {
      background-color: white;
      border-radius: 8px;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      overflow: hidden;
      text-align: center;
      padding: 10px;
      width: calc(33.33% - 20px);
      box-sizing: border-box;
      page-break-inside: avoid;
      break-inside: avoid;
    }

    .student-image img {
      width: 80px;
      height: 80px;
      object-fit: cover;
      border-radius: 50%;
      margin: 0 auto;
    }

    .student-details h3 {
      font-size: 16px;
      color: #333;
      margin: 10px 0 5px;
    }

    .extra-fields ul {
      list-style-type: none;
      padding: 0;
      margin: 0;
    }

    .extra-fields li {
      font-size: 12px;
      color: #666;
      margin: 3px 0;
    }
    .qr-code {
      text-align: center;
      margin-top: 10px;
    }
    .qr-code p {
      font-size: 10px;
      margin-bottom: 5px;
    }
    .qr-code img {
      width: 90px;
      height: 90px;
    }
    .page-break {
      page-break-after: always;
      clear: both;
    }

    @media print {
      body {
        background-color: white;
      }

      .student-card {
        box-shadow: none;
        border: 1px solid #ddd;
      }
    }

    @media screen and (max-width: 768px) {
      .student-card {
        width: calc(50% - 15px);
      }
    }

    @media screen and (max-width: 480px) {
      .student-card {
        width: 100%;
      }
    }
  </style>
</head>

<body>
  <h1 class="class-heading"><%= heading %></h1>

  <div class="student-grid">
    <% optimizedStudents.forEach((student, index) => { %>
      <div class="student-card">
        <div class="student-image">
          <img src="<%= student.avatarUrl %>" alt="<%= student.name %>">
        </div>
        <div class="student-details">
          <h3><%= student.name %></h3>
          <div class="extra-fields">
            <ul>
              <% Object.entries(student.extraFields).forEach(([key, value]) => { %>
                <li><strong><%= key %>:</strong> <%= value %></li>
              <% }) %>
            </ul>
          </div>
          <div class="qr-code">
            <p>Please Scan QR For ID Card
              Updation</p>
            <img src="<%= student.qrCodeImage %>" alt="QR Code">
          </div>
        </div>
      </div>

      <% if ((index + 1) % 9 === 0 && index !== optimizedStudents.length - 1) { %>
        </div>
        <div class="page-break"></div>
        <div class="student-grid">
      <% } %>
    <% }) %>
  </div>
</body>

</html>

